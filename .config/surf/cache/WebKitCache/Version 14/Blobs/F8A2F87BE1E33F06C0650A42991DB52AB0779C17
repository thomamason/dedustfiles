if [ -f $HOME/.dmenurc ]; then
  . $HOME/.dmenurc
else
  DMENU=&#039;dmenu -i&#039;
fi

GS=`cat ~/.gshist | $DMENU $*`

if grep -q &quot;$GS&quot; &quot;$HOME/.gshist&quot; ; then
    echo already exists in history
else
    echo $GS &gt;&gt; ~/.gshist
fi

firefox -new-window http://www.google.co.uk/search?q=&quot;$GS&quot;</code></pre></div>
